{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "app-config": ["config.js"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "target": "es5",
    "lib": ["es5", "es2015", "es2016", "dom"],
    "isolatedModules": true
  },
  "include": ["."]
}
